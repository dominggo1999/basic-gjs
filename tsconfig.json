{
  "compilerOptions": {
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "*",
        "types/*"
      ]
    },
    "target": "ES2018",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ES2020",
    "outDir": "_build",
    "lib": [
      "es2017"
    ],
    "typeRoots": []
  },
  "include": [
    "src/*",
    "types/app/*",
    "tsconfig.node.json"
  ],
  "exclude": [
    "node_modules/@types/**"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}